<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AlQuran" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CenterLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CardMenu">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">160dp</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="CardItem">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:scaleX">0.65</item>
        <item name="android:scaleY">0.65</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#1B1B1B</item>
    </style>

    <style name="Text.Title">
        <item name="android:fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="Text.Title.Big">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Text.Title.Medium">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.Title.Small">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Content">
        <item name="android:fontFamily">@font/open_sans_medium</item>
    </style>

    <style name="Text.Content.Big">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Content.Medium">
        <item name="android:textSize">14sp</item>
    </style>
</resources>